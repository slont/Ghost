<!-- 記事画面 -->
{{! The post content }}
<div class="{{post_class}} blog-container full_post" data-file="{{url}}" data-target=".word_counts">
  <div class="row multi-col collapse">
    <!-- ソーシャルボタン -->
    <div class="share-side-bar social-area-syncer hide-for-small-only"></div>
    <div class="medium-8 column main-colmun">
      <div class="blog-content">
        <!-- ResponsiveDisplayAd01 -->
        <div class="google-ad">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-9576950957758188"
               data-ad-slot="8626094554"
               data-ad-format="auto"></ins>
          <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
        <div class="word_counts">
          {{content addId=true}}
        </div>
        <!-- ソーシャルボタン -->
        <div class="text-center show-for-small-only">↓気に入ったらシェアしてね↓</div>
        <div class="social-area-syncer show-for-small-only"></div>
        <!-- ResponsiveDispTextAd01 -->
        <div class="google-ad">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-9576950957758188"
               data-ad-slot="5533027355"
               data-ad-format="auto"></ins>
          <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        <div class="related-posts-area">
          <h4 class="related-posts-label">関連記事</h4>
          {{related_tag_posts max=6 mode=1}}
        </div>

        <div class="popular-posts-area">
          <h4 class="popular-label">人気記事</h4>
          {{popular_posts max=6 mode=1}}
        </div>

        <div class="new-posts-area">
          <h4 class="new-label">新着記事</h4>
          {{new_posts max=6 mode=1}}
        </div>

        <!-- 前後の投稿 -->
        <div class="prev-next row">
          <div class="small-12 large-6 columns">
            {{#prev_post}}
              <div class="prev">
                <a href="{{url}}">
                  <h4>前の投稿</h4>
                  <p>{{title}}</p>
                </a>
              </div>
            {{/prev_post}}
          </div>

          <div class="small-12 large-6 columns">
            {{#next_post}}
              <div class="next">
                <a href="{{url}}">
                  <h4>次の投稿</h4>
                  <p>{{title}}</p>
                </a>
              </div>
            {{/next_post}}
          </div>
        </div>

        {{#if author}}
          {{#author}}
            <div class="author-wrap">
              <div class="author-img">
                {{#if image}}
                  <img src="{{image}}" alt="{{name}}"/>
                {{/if}}
              </div>
              <div class="author-status">
                <h2>{{name}}</h2>
                {{#if website}}
                  <span><a href="{{website}}" target="_blank">{{website}}</a></span>
                {{/if}}
                {{#if bio}}
                  <p>{{bio}}</p>
                {{/if}}
              </div>
            </div>
          {{/author}}
        {{/if}}
        {{> comments}}
      </div>
    </div>

    <div class="medium-4 column side-column-right">
      <div class="scroll-spy">
        {{outline}}

        <!-- ResponsiveDispTextAd01 -->
        <div class="google-ad">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-9576950957758188"
               data-ad-slot="5533027355"
               data-ad-format="auto"></ins>
          <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
        <!-- ResponsiveDisplayAd02 -->
        <div class="google-ad">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-9576950957758188"
               data-ad-slot="4056294151"
               data-ad-format="auto"></ins>
          <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
      </div>
    </div>
  </div>
</div>